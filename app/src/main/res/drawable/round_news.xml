<!-- round_news.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color for the CardView -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" /> <!-- Set your desired background color -->
            <corners android:radius="25dp" />
        </shape>
    </item>

    <!-- Stroke for the CardView border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#FFFCFC" /> <!-- Change the color and width as needed -->
            <corners android:radius="25dp" />
        </shape>
    </item>

</layer-list>
